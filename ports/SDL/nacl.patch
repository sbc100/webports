+SDLPepperInstance::SDLPepperInstance(PP_Instance instance)
+  : pp::Instance(instance),
+    width_(0),
+    height_(0) {
+  RequestInputEvents(PP_INPUTEVENT_CLASS_MOUSE);
+  RequestFilteringInputEvents(PP_INPUTEVENT_CLASS_KEYBOARD);
